<h1>Listing mobiles</h1>

<% @mobiles.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |mobile| %>
      <div class="col-md-4">
        <%= image_tag mobile.picture_url(:thumb) if mobile.picture? %>
        <h4><%= link_to mobile.name, mobile %></h4>
        <%= mobile.description %>
      </div>
    <% end %>
  </div>
<% end %>
